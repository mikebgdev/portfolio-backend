# Coolify Deployment Configuration
# Copy this to your Coolify environment variables

# Environment Settings
ENVIRONMENT=production
DEBUG=false

# Database Configuration (Update with your Coolify database service)
POSTGRES_HOST=your-postgres-service-name
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=portfolio_db

# Security (REQUIRED - Generate a secure 32+ character key)
SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long-for-production

# CORS Configuration (Update with your domain)
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
CORS_ALLOW_CREDENTIALS=true

# Email Configuration (for contact forms)
EMAIL_ENABLED=true
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Performance Settings
RATE_LIMIT_PER_MINUTE=60
MAX_UPLOAD_SIZE=10485760
CACHE_TTL_CONTENT=300
CACHE_TTL_STATIC=3600

# Admin Panel Settings
ADMIN_PANEL_ENABLED=true

# Logging
LOG_LEVEL=INFO

# Default Language
DEFAULT_LANGUAGE=en