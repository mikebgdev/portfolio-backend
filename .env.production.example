# Production Environment Configuration Template
# Copy this to .env for production deployment

# Database Configuration (Production)
POSTGRES_HOST=db_host
POSTGRES_PORT=5432
POSTGRES_USER=portfolio_prod_user
POSTGRES_PASSWORD=very_secure_production_password_here
POSTGRES_DB=portfolio_production

# Authentication (REQUIRED - Generate new secure keys for production)
SECRET_KEY=production_secret_key_minimum_32_characters_long_and_cryptographically_secure

# Application Settings (Production)
DEBUG=false

# Security Settings
MAX_UPLOAD_SIZE=10485760
RATE_LIMIT_PER_MINUTE=60
ENABLE_RATE_LIMITING=true

# Cache Settings (memory-based)
CACHE_TTL_DEFAULT=600
CACHE_TTL_CONTENT=1800
CACHE_TTL_STATIC=7200
ENABLE_HTTP_CACHE=true
ENABLE_COMPRESSION=true