# Production Environment Configuration
# Copy this file to .env in production and update values

# Environment
ENVIRONMENT=production

# Security (REQUIRED)
SECRET_KEY=your-super-secure-32-character-secret-key-here

# Database Configuration (REQUIRED)
POSTGRES_HOST=your-postgres-host
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=portfolio_db

# CORS Configuration (REQUIRED for frontend)
# Add your frontend domain(s) here - VERY IMPORTANT!
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]
# Or use wildcard for development/testing (NOT recommended for production)
# CORS_ORIGINS=["*"]

# Email Configuration (for contact forms)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Optional Performance Settings
RATE_LIMIT_PER_MINUTE=100
MAX_UPLOAD_SIZE=10485760
ENABLE_COMPRESSION=true
ENABLE_HTTP_CACHE=true

# Debug Settings (set to false in production)
DEBUG=false