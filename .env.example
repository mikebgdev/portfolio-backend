# Portfolio Backend Configuration Example

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_HOST=192.168.10.200
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=portfolio_db

# Alternative: Full database URL (overrides individual postgres settings)
# DATABASE_URL=postgresql://user:password@host:port/database

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
SECRET_KEY=your-super-secure-secret-key-at-least-32-characters-long
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=secure-admin-password

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Environment: development, production
ENVIRONMENT=development

# Debug mode (should be false in production)
DEBUG=false

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
# Cache is automatically enabled only in production
ENABLE_HTTP_CACHE=true
CACHE_TTL_DEFAULT=300
CACHE_TTL_CONTENT=600
CACHE_TTL_STATIC=3600

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
ENABLE_COMPRESSION=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
MAX_UPLOAD_SIZE=10485760
RATE_LIMIT_PER_MINUTE=100
ENABLE_RATE_LIMITING=true

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Development CORS origins (permissive by default)
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true

# Production CORS origins (replace with your actual domains)
# CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# =============================================================================
# LANGUAGE SETTINGS
# =============================================================================
DEFAULT_LANGUAGE=en
# SUPPORTED_LANGUAGES={"en": "English", "es": "Espa√±ol"}

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================

# --- DEVELOPMENT ENVIRONMENT ---
# ENVIRONMENT=development
# DEBUG=true
# CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
# RATE_LIMIT_PER_MINUTE=1000
# Note: Cache will be DISABLED automatically in development

# --- PRODUCTION ENVIRONMENT ---
# ENVIRONMENT=production
# DEBUG=false
# CORS_ORIGINS=["https://yourdomain.com"]
# RATE_LIMIT_PER_MINUTE=100
# SECRET_KEY=production-secret-key-very-secure
# Note: Cache will be ENABLED automatically in production